# Example Terraform variables file
# Copy this to terraform.tfvars and customize as needed

aws_region   = "eu-north-1"
cluster_name = "devops-challenge-k8s"
environment  = "dev"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"

# Subnet Configuration
public_subnet_cidr  = "10.0.1.0/24"
private_subnet_cidr = "10.0.11.0/24"

# Availability zone (leave empty to use first available, or specify like "eu-north-1a")
availability_zone = ""
# EC2 Configuration
instance_type = "t3.small" # 2 vCPU, 2 GB RAM

# Cluster Configuration
control_plane_count = 1
worker_count        = 2

# Key Pair Configuration
# Set create_key_pair = false and provide key_name if you want to use an existing key pair
create_key_pair = true
# key_name = "my-existing-key"

# Kubernetes Configuration
k8s_version = "latest"

# Tags
tags = {
  Project     = "DevOpsChallenge"
  ManagedBy   = "Terraform"
  Environment = "dev"
  Owner       = "devops-team"
}

